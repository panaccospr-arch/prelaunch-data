generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. The User Table
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  phone         String?   @unique
  phoneVerified DateTime?
  passwordHash  String?   // For email/password login
  image         String?
  
  // To link to Social Media Accounts
  accounts      Account[]
  
  // To link to this User's Submissions
  submissions   Submission[]
}

// 2. The Submission Table
model Submission {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  
  // Fields for the geographic data
  fName           String
  lName           String?
  gender          String
  dateOfBirth     DateTime
  pincode         String
  country         String   @default("Bharat (India)")
  state           String
  district        String
  city            String
  policeStation   String?
  postOffice      String?
  locality        String
  landmark        String?
  
  // Security field
  ipAddress       String

  // Link back to the User who submitted it
  user            User     @relation(fields: [userId], references: [id])
  userId          String
}


// This model is required by Auth.js for social logins
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}