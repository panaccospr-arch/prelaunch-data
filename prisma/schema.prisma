// 2. The Submission Table
model Submission {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  
  // Fields for the geographic data
  fName           String
  lName           String?
  gender          String
  dateOfBirth     DateTime
  pincode         String
  country         String   @default("Bharat (India)")
  state           String
  district        String
  city            String
  policeStation   String?
  postOffice      String?
  locality        String
  landmark        String?
  
  // Security field
  ipAddress       String

  // Link to the User is now OPTIONAL
  user            User?    @relation(fields: [userId], references: [id])
  userId          String?
}